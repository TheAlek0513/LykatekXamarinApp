<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LykatekXamarinApp.Views.OrderForm"
             Title="Ny bestilling - Indtast mål">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Padding="10">
                <Image Source="T_Muffe_M_Afgrening.png"></Image>
                <StackLayout x:Name="EntriesStacklayout">
                </StackLayout>

                <Label x:Name="TotalItemCountLabel" FontAttributes="Bold" Padding="2" FontSize="18" Text="Antal der ønskes" />
                <Entry x:Name="TotalItemCount" Text="1" TabIndex="{Binding LastTabIndex}" ReturnType="Next" Placeholder="E.g. 1, 2 eller 3." Keyboard="Numeric"></Entry>

                <ActivityIndicator IsRunning="False" x:Name="OrderActivityIndicator" Color="#000000"/>
                <Button x:Name="GoFutherButton" Text="Gå videre" Clicked="GoFuther_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>