<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LykatekXamarinApp.Views.ContactPage"
             Title="Kontakt Lykatec">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png" />

            <Label FontSize="16" Padding="2" TextColor="Black" x:Name="EmailDisplay"></Label>
            <Label FontSize="16" Padding="2" TextColor="Black" x:Name="PhoneDisplay"></Label>
            
            <Button Clicked="CallLykatec_Clicked" Text="Ring til Lykatec" Image="phone.png" />
            <Button Clicked="EmailLykatec_Clicked" Text="Send e-mail til Lykatec" Image="email.png" />

            <Button Text="Tilbage" TextColor="#949494" FontSize="20" Clicked="GoBackButton_Clicked" BackgroundColor="Transparent" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>